<div class="d-flex justify-content-center align-items-center login" style="height: 100vh;">
    <div class="logoSide logoLeftSide d-flex justify-content-end align-items-center">
        <div class="bgcontainer"></div>
    </div>
    <div
        class="logoSide logoRightSide d-flex justify-content-start align-items-center animate__animated animate__backInRight">
        <form action="/auth/signup" method="post" class="d-flex flex-column align-items-end animate__animated"
            name="signup">
            {{#if inf}}
            <p style="color: red;">{{inf}}</p>
            {{/if}}
            <div>
                <label>Username:</label>
                <input type="text" name="username" />
            </div>
            <div>
                <label>Email:</label>
                <input type="text" name="email" />
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password" />
            </div>
            <div>
                <input type="submit" value="Sign Up" />
            </div>
        </form>
    </div>

</div>